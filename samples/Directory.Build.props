<Project>
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <!--
      Not using Mawosoft.BenchmarkDotNetToolbox.Samples on purpose.
      We want to have the "using Mawosoft.BenchmarkDotNetToolbox;" directive in the samples
    -->
    <RootNamespace>Mawosoft.BDNToolboxSamples</RootNamespace>
    <TargetFrameworks>net5.0</TargetFrameworks>
    <IsPackable>false</IsPackable>
    <Description>Samples for BenchmarkDotNetToolbox</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\common\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.13.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Mawosoft.BenchmarkDotNetToolbox\Mawosoft.BenchmarkDotNetToolbox.csproj" />
  </ItemGroup>

</Project>
